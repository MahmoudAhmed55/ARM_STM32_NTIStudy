#include "lib/STD_TYPES.h"
#include "lib/BIT_MATH.h"

#include "MCAL/RCC/RCC_Interface.h"
#include "MCAL/GPIO/GPIO_Interface.h"

void main(void)
{
	RCC_InitClockSystem();
	RCC_EnableClock(APB2,IOPA);
	RCC_EnableClock(APB2,IOPB);

	GPIO_SetPinDirection(PA,PIN0,OUTPUT10KHZ_PUSHPALL);
	GPIO_SetPinDirection(PB,PIN0,INPUT_PULL_UP_DOWN);
	GPIO_SetPinValue(PB,PIN0,HIGH);

	GPIO_SetPinDirection(PA,PIN1,OUTPUT10KHZ_PUSHPALL);
	GPIO_SetPinDirection(PB,PIN1,INPUT_PULL_UP_DOWN);
	GPIO_SetPinValue(PB,PIN1,LOW);


	//u8 i=0,j=0;
	while (1)
	{
		if (GPIO_GetPinValue(PB,PIN0)==0)
		{
			GPIO_TogPin(PA,PIN0);
			while(GPIO_GetPinValue(PB,PIN0)==0);
		}
		if (GPIO_GetPinValue(PB,PIN1)==1)
				{
					GPIO_TogPin(PA,PIN1);
					while(GPIO_GetPinValue(PB,PIN1)==1);
				}

	}

}



