#ifndef MCAL_TIMER_TIMER_PRIVATE_H_
#define MCAL_TIMER_TIMER_PRIVATE_H_

#define   TIMER_BASEADDRESS      (0x40013000)


#define TIMER_CR1                       *((volatile u32*) (TIMER_BASEADDRESS +0x00))
#define TIMER_CR2                       *((volatile u32*) (TIMER_BASEADDRESS +0x04))
#define TIMx_SR                       *((volatile u32*) (TIMER_BASEADDRESS +0x10))
#define TIMx_CNT                        *((volatile u32*) (TIMER_BASEADDRESS +0x24))
#define TIMx_PSC                        *((volatile u32*) (TIMER_BASEADDRESS +0x28))
#define TIMx_ARR                        *((volatile u32*) (TIMER_BASEADDRESS +0x2C))


#endif /* MCAL_TIMER_TIMER_PRIVATE_H_ */
